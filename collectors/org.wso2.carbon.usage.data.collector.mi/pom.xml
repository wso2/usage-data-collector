<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.wso2.carbon</groupId>
        <artifactId>usage-data-collector</artifactId>
        <version>1.0.0-SNAPSHOT</version>
        <relativePath>../../pom.xml</relativePath>
    </parent>

    <artifactId>org.wso2.carbon.usage.data.collector.mi</artifactId>
    <packaging>bundle</packaging>

    <name>WSO2 Carbon - Micro Integrator Usage Data Collector</name>
    <description>Usage Data Collector for Micro Integrator with scheduler and utility code</description>

    <dependencies>
        <!-- Synapse and Axis2 dependencies -->
        <dependency>
            <groupId>org.apache.synapse</groupId>
            <artifactId>synapse-core</artifactId>
            <version>${synapse.version}</version>
        </dependency>
        <!-- Jackson for JSON serialization -->
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-databind</artifactId>
            <version>${jackson.version}</version>
        </dependency>
        <!-- Common Publisher API -->
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.usage.data.collector.common</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!-- Apache HTTP Client -->
        <dependency>
            <groupId>org.apache.httpcomponents.wso2</groupId>
            <artifactId>httpcore</artifactId>
            <version>${httpcore.version}</version>
        </dependency>
        <dependency>
            <groupId>org.apache.httpcomponents.wso2</groupId>
            <artifactId>httpclient</artifactId>
            <version>${httpcomponent.version}</version>
        </dependency>

        <!-- OSGi -->
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.core</artifactId>
            <version>${osgi.core.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.service.component.annotations</artifactId>
            <version>${osgi.annotations.version}</version>
            <scope>provided</scope>
        </dependency>

        <!-- Commons Logging -->
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
            <version>${commons-logging.version}</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>
                            ${project.artifactId}
                        </Bundle-SymbolicName>
                        <Private-Package>
                            org.wso2.carbon.usage.data.collector.mi.internal.*
                        </Private-Package>
                        <Import-Package>
                            org.apache.commons.logging.*,
                            org.apache.synapse.*,
                            org.apache.axis2.context.*,
                            org.wso2.carbon.usage.data.collector.common.publisher.api.*;version="${project.version}",
                            org.osgi.service.*;version="${imp.package.version.osgi.service}",
                            javax.sql,
                            *;resolution:=optional
                        </Import-Package>
                        <Export-Package>
                            !org.wso2.carbon.usage.data.collector.mi.internal.*,
                            org.wso2.carbon.usage.data.collector.mi;version="${project.version}",
                            org.wso2.carbon.usage.data.collector.mi.publisher.*;version="${project.version}",
                            org.wso2.carbon.usage.data.collector.mi.transaction.record.*;version="${project.version}",
                            org.wso2.carbon.usage.data.collector.mi.transaction.counter.*;version="${project.version}",
                            org.wso2.carbon.usage.data.collector.mi.transaction.aggregator.*;version="${project.version}",
                            org.wso2.carbon.usage.data.collector.mi.transaction.publisher.*;version="${project.version}",
                            org.wso2.carbon.usage.data.collector.mi.datasource.*;version="${project.version}"
                        </Export-Package>
                    </instructions>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>8</source>
                    <target>8</target>
                    <!-- Skip compilation by default for OSGi bundle - classes will be available at WSO2 MI runtime -->
                    <skipMain>${skip.compilation}</skipMain>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <properties>
        <synapse.version>[4.0.0,5.0.0)</synapse.version>
        <jackson.version>2.15.2</jackson.version>
        <httpcore.version>4.4.16.wso2v1</httpcore.version>
        <httpcomponent.version>4.2.5.wso2v1</httpcomponent.version>
        <osgi.core.version>6.0.0</osgi.core.version>
        <osgi.annotations.version>1.3.0</osgi.annotations.version>
        <commons-logging.version>1.2</commons-logging.version>
    </properties>
    <repositories>
        <repository>
            <id>wso2-nexus</id>
            <name>WSO2 internal Repository</name>
            <url>https://maven.wso2.org/nexus/content/groups/wso2-public/</url>
            <releases>
                <enabled>true</enabled>
                <updatePolicy>daily</updatePolicy>
                <checksumPolicy>ignore</checksumPolicy>
            </releases>
        </repository>
        <repository>
            <id>wso2.releases</id>
            <name>WSO2 internal Repository</name>
            <url>https://maven.wso2.org/nexus/content/repositories/releases/</url>
            <releases>
                <enabled>true</enabled>
                <updatePolicy>daily</updatePolicy>
                <checksumPolicy>ignore</checksumPolicy>
            </releases>
        </repository>
    </repositories>
</project>

